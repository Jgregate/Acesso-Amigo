<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/Cadastro"
    tools:context=".CadastroActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="250dp"
            android:padding="20dp">
            
            <EditText
                android:id="@+id/cadastro_nome"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/borda_azul"
                android:hint="Nome"
                android:padding="8dp"/>
            
            <EditText
                android:id="@+id/cadastro_sobrenome"
                android:layout_width="175dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/borda_azul"
                android:hint="Sobrenome"
                android:padding="8dp"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-40dp"
                android:padding="20dp">
                
                <EditText
                    android:id="@+id/cadastro_emailoutelefone"
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/borda_azul"
                    android:hint="E-mail ou telefone"
                    android:padding="8dp"/>

                <EditText
                    android:id="@+id/cadastro_senha"
                    android:layout_width="370dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/borda_azul"
                    android:hint="Crie uma senha"
                    android:padding="8dp"
                    android:inputType="textPassword"/>

                <Button
                    android:layout_width="370dp"
                    android:layout_height="70dp"
                    android:text="Cadastre-se"
                    android:id="@+id/cadastre_botao"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    app:cornerRadius = "30dp"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"/>

            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>